<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>affected</artifactId>
        <groupId>org.codeandmagic</groupId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <groupId>org.codeandmagic</groupId>
    <artifactId>affected-web</artifactId>
    <version>${affected.version}</version>
    <packaging>war</packaging>
    <name>Affected Web</name>

    <dependencies>
        <dependency>
            <groupId>org.codeandmagic</groupId>
            <artifactId>affected-core</artifactId>
            <version>${affected.version}</version>
        </dependency>
        
        <dependency>
        	<groupId>org.codeandmagic</groupId>
        	<artifactId>affected-gwt</artifactId>
        	<version>${affected.version}</version>
        	<type>war</type>
        	<scope>runtime</scope>
        </dependency>

        <!--Spring dependencies -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>3.0.0.RELEASE</version>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.web.servlet</artifactId>
            <version>3.0.0.RELEASE</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
            <version>3.0.0.RELEASE</version>
        </dependency>

        <!-- Velocity -->
        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>com.springsource.org.apache.velocity</artifactId>
            <version>1.6.2</version>
        </dependency>

        <!-- Velocity Tools -->
        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>com.springsource.org.apache.velocity.tools.view</artifactId>
            <version>2.0.0.beta3</version>
        </dependency>
    </dependencies>

    <!-- Building instructions and lifecycle -->
    <build>
        <finalName>affected</finalName>

        <plugins>
        	<!-- Maven War Plugin -->
        	<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-beta-1</version>
				
				<configuration>
					<warSourceExcludes>.gwt-tmp/**,META-INF/**,index.*,**/*.class</warSourceExcludes>
					<overlays>
						<overlay></overlay>
						<overlay>
							<groupId>org.codeandmagic</groupId>
							<artifactId>affected-gwt</artifactId>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
        
        
            <!-- Jetty plugin -->
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <configuration>
                    <contextPath>/affected</contextPath>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>