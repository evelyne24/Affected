<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:affected="urn:import:org.codeandmagic.affected.gwt.client">
	
	<ui:style>
		.container {
			width: 500px;
			height: 500px;
			margin: 0px auto;
			border: 1px solid gray;
		}
	</ui:style>
	
	<g:HorizontalPanel styleName="{style.container}">
		<affected:AppMenu ui:field="appMenu" />
		<affected:DrawingArea ui:field="drawingArea" />
	</g:HorizontalPanel>
	
</ui:UiBinder> 
